.clear
.page
  .page_border
    %b
      = I18n.t(:collection_title)
    %br
    = @collection.title
    %br
    %br
    %b
      = I18n.t(:collection_description)
    %br
    = @collection.description
    %br
    %br
    %b
      = I18n.t(:status)
    %br
    = parse_collection_status(@collection.status)
    %br
    %br
    - if(@collection.photo_name.nil?)
      - @thumb = "images_#{I18n.locale}/defaultCollection.jpg"
    - else
      - @thumb = "images_#{I18n.locale}/collections/#{@collection.id}/#{@collection.photo_name}"
    = image_tag("/#{@thumb}", :width => 109, :border => 0)
    - if session["user_id"] == @collection.user_id
      = link_to I18n.t(:edit_collection), :controller => :collections ,:action => :edit, :id => @collection
