- if (@collection_volumes != '' && @total_number > 0)
  - @collection_volumes.each do |ubh_vol|
    - @vol = ubh_vol.volume
    - @title = @vol.book.title
    - @thumb = "volumes/#{@vol[:job_id]}/thumb.jpg"
    .col-md-2.column
      = link_to image_tag("/#{@thumb}") , {:controller => :books, :action => :show, :id => @vol[:job_id]}  
    .col-md-6.column
      %h4
        = @title
        
    .col-md-4.column.controls
    .clearfix
    %hr