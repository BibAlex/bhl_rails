.form
  = form_for @collection, :builder => FormHelper::BHLFormBuilder do |f|
    = validation_errors_for(@collection)
    %ul
      %li
        = f.label :title, raw(t('title')), :class => 'required'
      %li
        = f.text_field :title, { :maxlength => 32 }
      %li
        = f.label :description, raw(t('description'))
      %li
        = f.text_area :description
      %li
        = f.check_box :status
        = I18n.t(:public)
      %li
        - if(@collection.photo_name.nil?)
          - @thumb = "images_#{I18n.locale}/defaultCollection.jpg"
        - else
          - @thumb = "images_#{I18n.locale}/collections/#{@collection.id}/#{@collection.photo_name}"
        = image_tag("/#{@thumb}", :width => 109, :border => 0)
      %li
        = f.file_field :picture
    %fieldset
      = f.submit I18n.t('submit_buton'), :class => "btn"
      = f.submit I18n.t('clear_button'), :class => "btn", :type => "reset"