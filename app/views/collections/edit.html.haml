.form
  = form_for @collection, :html => {:multipart => true}, :builder => FormHelper::BHLFormBuilder do |f|
    = validation_errors_for(@collection)
    %ul
      %li
        = f.label :title, raw(t('title')), :class => 'required'
      %li
        = f.text_field :title, { :maxlength => 32 }
      %li
        = f.label :description, raw(t('description'))
      %li
        = f.text_area :description
      %li
        = f.check_box :is_public
        = I18n.t(:public)
      %li
        - if(!(@collection.photo_name.blank?))
          - @thumb = @collection.photo_name_url(:thumb)
          = image_tag("#{@thumb}", :width => 150, :border => 0 , :id => "collection_photo")
          = check_box_tag "delete_photo"
          = I18n.t(:delete_photo)
      %li
        = f.file_field :photo_name
        %fieldset
      = f.submit I18n.t('submit_buton'), :class => "btn"
      = f.submit I18n.t('clear_button'), :class => "btn", :type => "reset"