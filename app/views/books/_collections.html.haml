.page
  .page_border
    - if (@collections != '' && @collections_total_number > 0)
      .count
        = "Found #{pluralize(@collections_total_number, I18n.t(:collection))} "
      - @collections.each do |collection|
        = render :partial => "collections/collection", :locals => {:with_rate => 0, :collection => collection}
      - if(!((@page == @lastPage && @lastPage == 1) || @lastPage == 0))
        - @pages = adjustPaging(@page, @lastPage)
        = render :partial => "books/paging"
    - else
      = I18n.t(:no_collections_found)