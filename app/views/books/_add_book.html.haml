%script{:type => "text/javascript", :src  => "http://code.jquery.com/jquery-1.9.1.js"}
%script{:type => "text/javascript", :src  => "http://code.jquery.com/ui/1.10.3/jquery-ui.js"}

:javascript
  $(document).ready(function() {
   $( "#confirmation" ).dialog({
      position: ['top', 100], 
      autoOpen: false, 
      modal: true, 
      title: "#{I18n.t(:successfully_added)}",
      buttons: {"#{I18n.t(:ok)}": 
                 {
                   text: "#{I18n.t(:ok)}",
                   click: function()
                   {
                     $(this).dialog("close");
                   }
                  }
      }
   });
    $( "#dialog_#{@number}" ).dialog({
      width: 400,
      position: ['top', 100], 
      autoOpen: false, 
      modal: true, 
      title: "#{I18n.t(:add_book_dialog_title)}",
      buttons: { 
        "#{I18n.t(:save)}": {
                        
                        text: "#{I18n.t(:save)}",
                        click: function() {
                              var col_id = $("#idselect").val(), 
                              title = $("#title").val(),
                              description = $("#description").val(),
                              public = $("#public").val(),
                              new_col = $("#new").val();
                             
                              if(new_col == 'off'){
                                $.ajax({type: "GET", 
                                       url: "/add_book?col_id=" + col_id +"&vol_id=" + "#{params[:id]}", 
                                       dataType: "script"
                                       });
                                $(this).dialog("close");
                                $( "#confirmation" ).dialog( "open" );
                              }else{
                                if(title.trim().length == 0){
                                  $("#error").show();
                                }else{
                                   $.ajax({type: "GET", 
                                       url: "/add_book?title=" + escape(title) + "&description=" + escape(description) + "&public=" + escape(public) + "&vol_id=" + "#{params[:id]}", 
                                       dataType: "script"
                                       }) ;
                                   $(this).dialog("close");
                                   $( "#confirmation" ).dialog( "open" );
                                   $("#error").hide();
                                }
                              }
                             }}, 
        "#{I18n.t(:cancel)}": function() {$(this).dialog("close");$("#error").hide();}
      } 
    });
    $( "#opener#{@number}" ).click(function() {
      var buttons = $('.ui-dialog-buttonset').children('button');
      buttons.removeClass("ui-state-hover").removeClass("ui-satate-focus").
      removeClass("ui-button").removeClass("ui-widget").removeClass("ui-state-default").
      addClass("dialogbutton");
      if(document.getElementById("new") != null){
        document.getElementById("new").checked = false;
      }
      if(document.getElementById("public") != null){
        document.getElementById("public").checked = false;
      }
      var xmlhttp;
      if (window.XMLHttpRequest){ 
        // code for IE7+, Firefox, Chrome, Opera, Safari
        xmlhttp=new XMLHttpRequest();
      }
      else{
        // code for IE6, IE5
        xmlhttp=new ActiveXObject("Microsoft.XMLHTTP");
      }
      xmlhttp.onreadystatechange=function(){
        if (xmlhttp.readyState==4 && xmlhttp.status==200){
          document.getElementById("dialog_#{@number}").innerHTML=xmlhttp.responseText;
        }
      }
      xmlhttp.open("GET","/dialog_content",true);
      xmlhttp.send();
      
      $( "#dialog_#{@number}" ).dialog( "open" );
       
    });
  });   

