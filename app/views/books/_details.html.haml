      = I18n.t(:book_details_bibtex)
    %a.list-group-item{"data-toggle" => "modal", href: "#modal-container", role: "button",  :onclick => "loadformats('#{I18n.t(:book_details_endnote)}', '#{get_format(params[:id], 'endnote')}');"}
      %i.fa.fa-angle-double-right
      = I18n.t(:book_details_endnote)
      
