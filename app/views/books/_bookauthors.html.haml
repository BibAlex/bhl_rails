- doc_authors = @doc["author_#{@doc_language}"]
- authors = fillResponseArrays(doc_authors)
- more = @doc["author_#{@doc_language}"].length - authors.length
%i
  %b
    =I18n.t(:listresult_author_by)
- authors.each_with_index do |author, index|  
  = author.kind_of?(Array) ? author[0].html_safe : author.html_safe
  -if index != authors.length - 1
    %b
      =I18n.t(:separator)
- if (more > 0)
  = I18n.t(:and_count_more, :count => more)
%b
  =I18n.t(:terminator)