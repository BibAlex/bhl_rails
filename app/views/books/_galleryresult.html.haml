- if(@title.length > 30)
  - pos = @title.from(30).index(' ')
  - if(pos != nil && pos > 0)
    - @title = @title.to(pos+30) + ' ...'
.gallery
  = link_to image_tag("/#{@thumb}", :width => 120, :border => "0",) , {:controller => :books, :action => :show, :id => @vol[:job_id]}
  .title
    = link_to @title , {:controller => :books, :action => :show, :id => @vol[:job_id]}
    - if(@doc['author'] != nil)
      %br
      %span
        = render :partial => "books/bookauthors"