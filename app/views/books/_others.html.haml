      =I18n.t(:book_details_found_collections)
    #myCarousel.carousel.slide
      .carousel-inner
        .item.active
          .row#collectionsCarousel
            
      %a.left.carousel-control{"data-slide" => "prev", :href => "#", :onclick => "moveCollection(0);"} ‹
      %a.right.carousel-control{"data-slide" => "next", :href => "#", :onclick => "moveCollection(1);"} ›