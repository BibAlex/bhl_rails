:javascript  
  function confirmDelete(){
    var r = confirm("#{I18n.t(:remove_book_from_history_confirm)}");
    return r;
  }
.col-md-8.column.browse
  .row.clearfix
    .col-xs-2.column  
      = link_to image_tag("/#{@thumb}", :width => 109, :border => 0), 
          {:controller => :books, :action => :show, :id => @vol[:job_id]}
    .col-md-6.column
      %h4
        = link_to @title.html_safe , 
        {:controller => :books, :action => :show, :id => @vol[:job_id]}
      %p.small
        - if(@doc['author'] != nil)
          = render :partial => "books/bookauthors"
        - if(@doc['subject'] != nil)
          = render :partial => "books/booksubjects"
        - if(@doc['name'] != nil)
          - @names = fillResponseArrays(@doc, @highlight, 'name', @id)
          = render :partial => "books/booknames"
      %h4
        = "#{I18n.t(:last_visited_date)}: #{@ubh_vol.updated_at}"
    .col-xs-4.column.controls
      =render :partial => "users/sidelinks"
  %hr.clearfix.col-lg-12